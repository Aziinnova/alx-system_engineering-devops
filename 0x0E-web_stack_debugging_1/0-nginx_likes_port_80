#!/bin/bash

# Update package lists
apt update

# Install Nginx
apt install -y nginx

# Check if Nginx is running
systemctl status nginx

# Check the Nginx configuration
cat /etc/nginx/nginx.conf

# Verify if Nginx is listening on port 80
netstat -tuln | grep 80

# Check if any firewall rules are blocking port 80
ufw status

# Allow incoming connections on port 80 if UFW is enabled
ufw allow 80

# Restart Nginx
systemctl restart nginx

# Verify that Nginx is now listening on port 80
netstat -tuln | grep 80

